<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MeditationDetails">

    <TextView
        android:id="@+id/MeditationDetails_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgView_Meditation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/MeditationDetails_Title"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/MeditationDetails_Title"
        app:layout_constraintTop_toBottomOf="@+id/MeditationDetails_Title"
        app:srcCompat="@drawable/morning_sun" />

    <Button
        android:id="@+id/btn_Play"
        android:layout_width="118dp"
        android:layout_height="46dp"
        android:layout_marginTop="60dp"
        android:text="Play"
        app:layout_constraintEnd_toEndOf="@+id/imgView_Meditation"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/imgView_Meditation"
        app:layout_constraintTop_toBottomOf="@+id/imgView_Meditation" />

    <TextView
        android:id="@+id/MeditationDetails_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Description"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/btn_Play"
        app:layout_constraintStart_toStartOf="@+id/btn_Play"
        app:layout_constraintTop_toBottomOf="@+id/btn_Play" />

</androidx.constraintlayout.widget.ConstraintLayout>