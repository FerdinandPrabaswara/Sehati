<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/doctorBox"
        android:layout_width="318dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_grey" />

    <ImageView
        android:id="@+id/meditationIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/doctorBox"
        app:layout_constraintStart_toStartOf="@+id/doctorBox"
        app:layout_constraintTop_toTopOf="@+id/doctorBox" />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/epilogue_bold"
        android:text="Title"
        android:textColor="@color/brown"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/meditationIcon"
        app:layout_constraintTop_toTopOf="@+id/doctorBox" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/epilogue"
        android:text="Author"
        android:textColor="@color/brown"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/doctorBox"
        app:layout_constraintStart_toEndOf="@+id/meditationIcon"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:fontFamily="@font/epilogue"
        android:text="Duration"
        android:textColor="@color/brown"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/doctorBox"
        app:layout_constraintEnd_toEndOf="@+id/doctorBox"
        app:layout_constraintStart_toEndOf="@+id/author"
        app:layout_constraintTop_toTopOf="@+id/doctorBox"
        app:layout_constraintVertical_bias="0.761" />

</androidx.constraintlayout.widget.ConstraintLayout>