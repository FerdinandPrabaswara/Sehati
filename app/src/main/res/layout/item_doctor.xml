<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/doctorBox"
        android:layout_width="318dp"
        android:layout_height="113dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_grey" />

    <ImageView
        android:id="@+id/doctorProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintStart_toStartOf="@+id/doctorBox"
        app:layout_constraintTop_toTopOf="@+id/doctorBox" />

    <TextView
        android:id="@+id/doctorName"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/epilogue_bold"
        android:text="Doctor Name"
        android:textColor="@color/brown"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/doctorProfile"
        app:layout_constraintTop_toTopOf="@+id/doctorBox" />

    <TextView
        android:id="@+id/doctorDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/epilogue"
        android:text="Doctor detail"
        android:textColor="@color/brown"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/doctorProfile"
        app:layout_constraintTop_toBottomOf="@+id/doctorName" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/time_icon"
        app:layout_constraintBottom_toBottomOf="@+id/doctorBox"
        app:layout_constraintStart_toStartOf="@+id/doctorBox" />

    <TextView
        android:id="@+id/doctorTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/epilogue"
        android:text="Doctor Time"
        android:textColor="@color/dark_grey"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/doctorBox"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/doctorDetail"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/scheduleBtn"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_orange_btn"
        android:text="Schedule"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/doctorBox"
        app:layout_constraintEnd_toEndOf="@+id/doctorBox"
        app:layout_constraintTop_toTopOf="@+id/doctorBox"
        app:layout_constraintVertical_bias="0.839" />
</androidx.constraintlayout.widget.ConstraintLayout>