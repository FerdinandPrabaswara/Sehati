<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OnlineAppointment">

    <ImageView
        android:id="@+id/upcomingSessionBox"
        android:layout_width="318dp"
        android:layout_height="141dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_nude" />

    <TextView
        android:id="@+id/tv_upcoming_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/epilogue_extrabold"
        android:text="Online Appointment"
        android:textSize="20dp"
        android:textColor="@color/brown"
        app:layout_constraintStart_toStartOf="@+id/upcomingSessionBox"
        app:layout_constraintTop_toTopOf="@+id/upcomingSessionBox" />

    <TextView
        android:id="@+id/tv_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="Sahana V, Msc in Clinical Psychology"
        android:textSize="10dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/epilogue"
        app:layout_constraintStart_toStartOf="@+id/upcomingSessionBox"
        app:layout_constraintTop_toBottomOf="@+id/tv_upcoming_session" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="00:00 PM - 01:00 PM"
        android:textSize="10dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/epilogue_bold"
        app:layout_constraintStart_toStartOf="@+id/upcomingSessionBox"
        app:layout_constraintTop_toBottomOf="@+id/tv_identity" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_orange_btn"
        android:text="Join"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/upcomingSessionBox"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

    <ImageView
        android:id="@+id/scheduleBox"
        android:layout_width="318dp"
        android:layout_height="107dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upcomingSessionBox"
        app:srcCompat="@drawable/bg_nude" />

    <TextView
        android:id="@+id/tv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/epilogue_extrabold"
        android:text="Schedule an Appointment"
        android:textColor="@color/brown"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/scheduleBox"
        app:layout_constraintTop_toTopOf="@+id/scheduleBox" />

    <TextView
        android:id="@+id/tv_dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="Appointment Date :"
        android:textColor="@color/orange"
        android:textSize="10dp"
        android:fontFamily="@font/epilogue_bold"
        app:layout_constraintStart_toStartOf="@+id/scheduleBox"
        app:layout_constraintTop_toBottomOf="@+id/tv_schedule" />

    <TextView
        android:id="@+id/tv_appointment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="dummy"
        android:textColor="@color/brown"
        android:textSize="10dp"
        android:fontFamily="@font/epilogue"
        app:layout_constraintStart_toStartOf="@+id/scheduleBox"
        app:layout_constraintTop_toBottomOf="@+id/tv_dateText" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_orange_btn"
        android:text="Search"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_appointment_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_schedule" />

    <ImageView
        android:id="@+id/doctorBox"
        android:layout_width="318dp"
        android:layout_height="113dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scheduleBox"
        app:srcCompat="@drawable/bg_grey" />

    <TextView
        android:id="@+id/doctorName"
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/epilogue_bold"
        android:text="Sahana V"
        android:textColor="@color/brown"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/doctorBox"
        app:layout_constraintTop_toTopOf="@+id/doctorBox" />

    <TextView
        android:id="@+id/doctorDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/epilogue"
        android:text="Msc in Clinical Psychology"
        android:textColor="@color/brown"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/doctorBox"
        app:layout_constraintTop_toBottomOf="@+id/doctorName" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/time_icon"
        app:layout_constraintBottom_toBottomOf="@+id/doctorBox"
        app:layout_constraintStart_toStartOf="@+id/doctorBox" />

    <TextView
        android:id="@+id/doctorTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/epilogue"
        android:text="7:30 PM - 8:30 PM"
        android:textColor="@color/dark_grey"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/doctorBox"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/doctorDetail"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/scheduleBtn"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_orange_btn"
        android:text="Search"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/doctorBox"
        app:layout_constraintEnd_toEndOf="@+id/doctorBox"
        app:layout_constraintTop_toTopOf="@+id/doctorBox"
        app:layout_constraintVertical_bias="0.839" />
</androidx.constraintlayout.widget.ConstraintLayout>