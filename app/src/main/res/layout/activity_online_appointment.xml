<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OnlineAppointment">

    <!-- Bagian layout yang tetap -->
    <ImageView
        android:id="@+id/upcomingSessionBox"
        android:layout_width="318dp"
        android:layout_height="141dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_nude" />

    <TextView
        android:id="@+id/tv_upcoming_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/epilogue_extrabold"
        android:text="Online Appointment"
        android:textColor="@color/brown"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/upcomingSessionBox"
        app:layout_constraintTop_toTopOf="@+id/upcomingSessionBox" />

    <TextView
        android:id="@+id/tv_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/epilogue"
        android:text="Sahana V, Msc in Clinical Psychology"
        android:textColor="@color/brown"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/upcomingSessionBox"
        app:layout_constraintTop_toBottomOf="@+id/tv_upcoming_session" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/epilogue_bold"
        android:text="00:00 PM - 01:00 PM"
        android:textColor="@color/brown"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/upcomingSessionBox"
        app:layout_constraintTop_toBottomOf="@+id/tv_identity" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_orange_btn"
        android:text="Join"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/upcomingSessionBox"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

    <ImageView
        android:id="@+id/scheduleBox"
        android:layout_width="318dp"
        android:layout_height="107dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upcomingSessionBox"
        app:srcCompat="@drawable/bg_nude" />

    <TextView
        android:id="@+id/tv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/epilogue_extrabold"
        android:text="Schedule an Appointment"
        android:textColor="@color/brown"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/scheduleBox"
        app:layout_constraintTop_toTopOf="@+id/scheduleBox" />

    <TextView
        android:id="@+id/tv_dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/epilogue_bold"
        android:text="Appointment Date :"
        android:textColor="@color/orange"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/scheduleBox"
        app:layout_constraintTop_toBottomOf="@+id/tv_schedule" />

    <TextView
        android:id="@+id/tv_appointment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/epilogue"
        android:text=""
        android:textColor="@color/brown"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/scheduleBox"
        app:layout_constraintTop_toBottomOf="@+id/tv_dateText" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_orange_btn"
        android:text="Search"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/scheduleBox"
        app:layout_constraintEnd_toEndOf="@+id/scheduleBox" />

    <!-- RecyclerView untuk menggantikan bagian yang diminta -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/scheduleBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_doctor"/>

</androidx.constraintlayout.widget.ConstraintLayout>