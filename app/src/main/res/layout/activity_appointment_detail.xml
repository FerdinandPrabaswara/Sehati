<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AppointmentDetail">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detailBox"
        android:layout_width="318dp"
        android:layout_height="300dp"
        android:layout_marginTop="92dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_grey" />

    <ImageView
        android:id="@+id/doctorProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="@+id/detailBox"
        app:layout_constraintStart_toStartOf="@+id/detailBox"
        app:layout_constraintTop_toTopOf="@+id/detailBox" />

    <TextView
        android:id="@+id/doctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/epilogue_bold"
        android:text="Doctor Name"
        android:textColor="@color/brown"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/detailBox"
        app:layout_constraintTop_toBottomOf="@+id/doctorProfile" />

    <TextView
        android:id="@+id/doctorDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/epilogue"
        android:text="Doctor detail"
        android:textColor="@color/brown"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/detailBox"
        app:layout_constraintTop_toBottomOf="@+id/doctorName" />

    <ImageView
        android:id="@+id/ic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/time_icon"
        app:layout_constraintStart_toEndOf="@+id/doctorDetail"
        app:layout_constraintTop_toBottomOf="@+id/doctorProfile" />

    <TextView
        android:id="@+id/doctorTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/epilogue"
        android:text="Doctor Time"
        android:textColor="@color/dark_grey"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/detailBox"
        app:layout_constraintTop_toBottomOf="@+id/doctorProfile" />

    <ImageView
        android:id="@+id/pricebox"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginBottom="44dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/detailBox"
        app:layout_constraintEnd_toEndOf="@+id/detailBox"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/detailBox"
        app:srcCompat="@drawable/bg_dark_grey" />

    <TextView
        android:id="@+id/doctorPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/epilogue_bold"
        android:text="Rp. 00.000"
        android:textColor="@color/brown"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/pricebox"
        app:layout_constraintEnd_toEndOf="@+id/pricebox"
        app:layout_constraintStart_toStartOf="@+id/pricebox"
        app:layout_constraintTop_toTopOf="@+id/pricebox" />

    <Button
        android:id="@+id/finishBtn"
        android:layout_width="318dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_orange_btn"
        android:text="PAYMENT"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailBox"
        app:layout_constraintVertical_bias="0.045" />

</androidx.constraintlayout.widget.ConstraintLayout>